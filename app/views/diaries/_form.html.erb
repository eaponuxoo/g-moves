<%= form_for(@diary) do |f| %>
  <% if @diary.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@diary.errors.count, "error") %> prohibited this diary from being saved:</h2>

      <ul>
      <% @diary.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :"タイトル(20字以内)" , class:"input" %><br>
    <%= f.text_field :title, :size=>"40", :maxlength=>"20" %>
  </div>
  <div class="field">
    <%= f.label :日時 ,class:"input"%><br>
    <%= Time.now.to_s :date %>
  </div>
  <div class="field">
    <%= f.label :本文 ,class:"input"%><br>
    <%= f.text_area :content,  size: "60x50" %>
  </div>
  <div class="field">
    <%= f.label :user_id ,class:"input"%><br>
    <%= f.number_field :user_id %>
  </div>
  <div class="actions">
    <%= f.submit :class=>"submit"%>
  </div>
<% end %>
