<p id="notice"><%= notice %></p>

<h1>日記一覧</h1>


<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>日付</th>
      <th>本文</th>
      <th>User_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diaries.each do |diary| %>
      <tr>
        <td><%= diary.title %></td>
        <td><%= diary.date %></td>
        <td><%= diary.content %></td>
        <td><%= diary.user_id %></td>
        <td><%= link_to 'Show', diary %></td>
        <td><%= link_to 'Edit', edit_diary_path(diary) %></td>
        <td><%= link_to 'Destroy', diary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to '日記を書く', new_diary_path,class:"button" %>
